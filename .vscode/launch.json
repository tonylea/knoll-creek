{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Nodemon",
      "runtimeExecutable": "nodemon",
      "args": ["${workspaceRoot}/src/index.js"],
      "restart": true,
      "protocol": "inspector",
      "stopOnEntry": false,
      "runtimeArgs": ["--nolazy", "--require", "babel-register"],
      "sourceMaps": true
    }
  ]
}
